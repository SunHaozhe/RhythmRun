<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.gui.PaceFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tvNewRunLabel0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBold"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:text="@string/pace_your_distance"/>

        <TextView
            android:id="@+id/tvNewRunLabel1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNewRunLabel0"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            android:gravity="right"
            android:text="@string/pace_selected_itinerary"/>

        <TextView
            android:id="@+id/tvNewRunDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvNewRunLabel1"
            android:layout_alignBaseline="@id/tvNewRunLabel1"
            android:textSize="15sp"
            android:gravity="left"
            android:text=""/>

        <TextView
            android:id="@+id/tvNewRunLabel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNewRunLabel1"
            android:layout_alignRight="@id/tvNewRunLabel1"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            android:gravity="right"
            android:text="@string/pace_estimated_time"/>

        <TextView
            android:id="@+id/tvNewRunTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvNewRunDistance"
            android:layout_alignBaseline="@id/tvNewRunLabel2"
            android:textSize="15sp"
            android:gravity="left"
            android:text=""/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/tvNewRunLabel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBold"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:text="@string/pace_your_pace"/>

        <CheckBox
            android:id="@+id/cbNewRunFree"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="62dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@drawable/inverted_border"
            android:text="@string/recap_free"/>

        <TextView
            android:id="@+id/tvNewRunPace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/cbNewRunFree"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:textSize="24sp"
            android:textColor="@color/colorBold"
            android:gravity="left"
            tools:ignore="RelativeOverlap" />

        <SeekBar
            android:id="@+id/skNewRun"
            android:layout_width="290sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cbNewRunFree"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:progress="50"/>

    </RelativeLayout>

</LinearLayout>
