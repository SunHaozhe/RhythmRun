<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".activities.gui.MusicFragment">

    <TextView
        android:id="@+id/tvNewRunLabel6"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="@color/colorBold"
        android:text="@string/music_choose_style"
        tools:ignore="RelativeOverlap" />

    <CheckBox
        android:id="@+id/cbMusic"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/tvNewRunLabel6"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="@drawable/inverted_border"
        android:text="@string/music_random"/>

    <Spinner
        android:id="@+id/spMusic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNewRunLabel6"
        android:layout_marginTop="20dp"
        android:padding="7dp"
        android:background="@drawable/border"/>

    <TextView
        android:id="@+id/tvNewRunFoundFiles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spMusic"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
