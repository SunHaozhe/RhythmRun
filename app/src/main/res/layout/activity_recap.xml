<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raphaelattali.rythmrun.Android_activities.RecapActivity">

    <fragment
        android:id="@+id/recapMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:name="com.example.raphaelattali.rythmrun.activities.gui.SimpleMapFragment" />

    <RelativeLayout
        android:id="@+id/recapBarDistance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tvRecapLabelDistance"
            android:layout_width="200dp"
            android:layout_height="34dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:gravity="left"
            android:background="@color/primary"
            android:textColor="@color/textSecondary"
            android:textSize="20sp"
            android:text="@string/recap_selected_distance"/>

        <TextView
            android:id="@+id/recapSeparator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tvRecapLabelDistance"
            android:layout_alignRight="@id/tvRecapLabelDistance"
            android:backgroundTint="@color/textSecondary"
            android:background="@drawable/up_right_triangle"/>

        <TextView
            android:id="@+id/tvRecapDistance"
            android:layout_alignBottom="@id/tvRecapLabelDistance"
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"
            android:gravity="right"
            android:background="@color/textSecondary"
            android:textColor="@color/textPrimary"
            android:textSize="20sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recapBarPace"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="2dp"
        android:layout_below="@id/recapBarDistance">

        <TextView
            android:id="@+id/tvRecapLabelPace"
            android:layout_width="200dp"
            android:layout_height="34dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:gravity="left"
            android:background="@color/primary"
            android:textColor="@color/textSecondary"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/recapSeparator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tvRecapLabelPace"
            android:layout_alignRight="@id/tvRecapLabelPace"
            android:backgroundTint="@color/textSecondary"
            android:background="@drawable/up_right_triangle"/>

        <TextView
            android:id="@+id/tvRecapPace"
            android:layout_alignBottom="@id/tvRecapLabelPace"
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"
            android:gravity="right"
            android:background="@color/textSecondary"
            android:textColor="@color/textPrimary"
            android:textSize="20sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recapBarMusic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="2dp"
        android:layout_below="@id/recapBarPace">

        <TextView
            android:id="@+id/tvRecapLabelMusic"
            android:layout_width="200dp"
            android:layout_height="34dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:gravity="left"
            android:background="@color/primary"
            android:textColor="@color/textSecondary"
            android:textSize="20sp"
            android:text="@string/recap_selected_music"/>

        <TextView
            android:id="@+id/recapSeparator3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tvRecapLabelMusic"
            android:layout_alignRight="@id/tvRecapLabelMusic"
            android:backgroundTint="@color/textSecondary"
            android:background="@drawable/up_right_triangle"/>

        <TextView
            android:id="@+id/tvRecapMusic"
            android:layout_alignBottom="@id/tvRecapLabelMusic"
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"
            android:gravity="right"
            android:background="@color/textSecondary"
            android:textColor="@color/textPrimary"
            android:textSize="20sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/buttonRecapGO"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:textColor="@color/textSecondary"
        android:textSize="30sp"
        android:text="@string/recap_button_go"
        android:stateListAnimator="@anim/button_state_list_anim"
        android:elevation="4dp"/>


</RelativeLayout>
