<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.raphaelattali.rythmrun">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBvlvwvqg0aBDjY5zhpI0to6UNDLy3sLRs" />

        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.Main2Activity" />
        <activity
            android:name=".activities.gui.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.gui.NewRunActivity"
            android:label="@string/title_activity_new_run"
            android:parentActivityName=".activities.gui.HomeActivity" />
        <activity
            android:name=".activities.gui.RecapActivity"
            android:label="@string/title_activity_recap"
            android:parentActivityName=".activities.gui.NewRunActivity" />
        <activity
            android:name=".activities.gui.RunActivity"
            android:label="@string/title_activity_run"
            android:parentActivityName=".activities.gui.HomeActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
        <activity
            android:name=".activities.gui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activities.gui.HomeActivity" />
        <activity
            android:name=".activities.gui.LibraryActivity"
            android:label="@string/title_activity_library"
            android:parentActivityName=".activities.gui.HomeActivity" />
        <activity
            android:name=".activities.gui.SongActivity"
            android:label="@string/title_activity_library"
            android:parentActivityName=".activities.gui.LibraryActivity" />
        <activity
        	android:name=".activities.gui.BluetoothActivity" />
        <activity
            android:name=".activities.gui.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".activities.gui.HomeActivity" />
        <activity
            android:name=".activities.gui.LoginActivity"
            android:label="@string/title_activity_login" />
		<activity
            android:name=".activities.gui.HistoriqueActivity"
            android:label="@string/title_activity_historique"
            android:parentActivityName=".activities.gui.HomeActivity" />
        <activity
        	android:name=".activities.gui.SumUpActivity"
            android:parentActivityName=".activities.gui.RunActivity"/>
    </application>

</manifest>