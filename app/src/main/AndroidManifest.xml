        <activity android:name=".Android_activities.MainActivity" />
        <activity android:name=".Android_activities.Main2Activity" />
        <activity
            android:name=".Android_activities.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Android_activities.NewRunActivity"
            android:label="@string/title_activity_new_run"
